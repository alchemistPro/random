#include<iostream>
#include<cstdlib>

using namespace std;

int main(){
	int liczba;
	cout<<"podaj liczbe: ";
	cin>>liczba;
	switch( liczba )
	{
	case 1:
	cout<<"poniedzialek";
	break;
	case 2:
	cout<<"wtorek";
	break;
	case 3:
	cout<<"sroda";
	break;
	case 4:
	cout<<"czwartek";
	break;
	case 5:
	cout<<"piatek";
	break;
	case 6:
	cout<<"sobota";
	break;
	case 7:
	cout<<"niedziela";
	break;
	default:
	cout<<"wrong";
	break;
	}
	return 0;
}
