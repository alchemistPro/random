#include <iostream>
#include <cstdlib> //biblioteki
#include <cmath>
#include <iomanip>

using namespace std;

int main(){
	int i=0;
	
	for(int i=1;i<=10;i++)  //increment, licznik+1 i++
	{
		cout<<"i= ";
		cout<<i<<endl;
	}
	
	cout<<"poza petla i= "<<i<<endl;
	
	cout<<"Preinkrementacja:"<<endl;
	for(int i=1;i<=10;i++)
	cout<<"i="<<++i<<endl;
	
	cout<<"Postinkrementacja:"<<endl;
	for(int i=1;i<=10;i++)
	cout<<"i="<<i++<<endl;
	
	cout<<"Alternatywa dla for bez warunkow:"<<endl;
	int j=1;
	for(;;)
	{
		if(j<=10)
			cout<<"j= "<<j<<endl;
		else
			break;
		j++;
	}
	cout<<"Po zakonczeniu petli j= "<<j<<endl;
}
